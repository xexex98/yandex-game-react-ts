{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/strict",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    },
    "tsconfigRootDir": "."
  },
  "plugins": [
    "@typescript-eslint",
    "simple-import-sort",
    "import"
  ],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "no-unreachable": "error",
    "curly": "error",
    "eqeqeq": "error",
    "newline-after-var": "error",
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": "error",
    "no-console": [
      "error",
      {
        "allow": [
          "warn",
          "error",
          "info"
        ]
      }
    ],
    "simple-import-sort/imports": [
      "error",
      {
        "groups": [
          [
            "^\\u0000"
          ],
          [
            "^@?\\w"
          ],
          [
            "^\\."
          ],
          [
            "^.+\\.s?css$"
          ]
        ]
      }
    ],
    "import/newline-after-import": "error",
    "simple-import-sort/exports": "error"
  },
  "ignorePatterns": [
    "src/**/*.test.ts",
    "mocks/*",
    "setupTests.js"
  ]
}
